<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#c00"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img2_2"
            android:id="@+id/iv_zuo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="網易"
            android:textColor="#fff"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_zuo"
            android:layout_toEndOf="@+id/iv_zuo"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />

        <ImageView
            android:id="@+id/iv_you"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/img3_2"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/iv_tou"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img1_2"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</LinearLayout>
